# Terragrunt aliases
alias tg='terragrunt'
alias init='tg init'
alias reconfigure='init -reconfigure'
alias migrate-state='init -migrate-state'
alias refresh='tg refresh'
alias plan='tg plan -out plan.out'
alias apply='tg apply plan.out'
alias deploy='tg apply -target'
alias destroy='tg destroy'
alias knock='destroy -target'
alias update='refresh -target'
alias purge='destroy -auto-approve'
alias target='plan -target'
alias upgrade='target'
alias gogogo='tg apply -auto-approve'
alias ggg='gogogo'
alias state='tg state'
alias show='tg show'
alias list='state list'
alias format='tg fmt'
alias hclfmt='tg hclfmt'
alias validate='tg validate'
alias taint='tg taint'
alias untaint='tg untaint'
alias get='tg get'
alias version='tg version'
alias import='tg import'
alias run='tg run-all'
alias console='tg console'
alias output='tg output'
alias unlock='tg force-unlock -force'
alias clean='/bin/rm -fr .terraform .terragrunt-cache .terraform.locl.hcl terraform.tfstate* plan.out' 